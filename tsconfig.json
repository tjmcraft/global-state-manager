{
  "compilerOptions": {
    "target": "ES2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "paths": {
      "Util/*": ["Util/*"],
      "CSS/*": ["assets/css/*"],
      "Components/*": ["components/*"],
      "Model/*": ["Model/*"],
      "Hooks/*": ["hooks/*"],
    },
  }
}